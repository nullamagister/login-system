mixin metas
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")

mixin css(cssFiles)
    link(rel="stylesheet", href="css/all.min.css")
    link(rel="stylesheet", href="css/bootstrap.min.css")
    - for(let i = 0; i < cssFiles.length; i++)
        link(rel="stylesheet", href="css/" + cssFiles[i])

mixin fonts(fonts)
    - for(let i = 0; i < fonts.length; i++)
        link(rel="stylesheet", type="font/ttf" href="webfonts/" + fonts[i])

mixin scripts(scripts)
    script(src="js/jquery-3.5.1.min.js")
    script(src="js/bootstrap.min.js")
    script(src="js/jquery.nicescroll.min.js")
    script(src="js/plugins.min.js")
    script(src="js/ajax.min.js")
    - for(let i = 0; i < scripts.length; i++)
        script(src="js/" + scripts[i])

